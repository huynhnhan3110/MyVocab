<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        >
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#f2f2f2"
                android:endColor="#f2f2f2"
                android:startColor="#f2f2f2"/>
            <size
                android:width="25dp"
                android:height="25dp"/>
            <corners
                android:radius="16dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:bottom="4dp"
                    android:left="4dp"
                    android:right="4dp"
                    android:top="4dp">
                    <shape>
                        <gradient android:angle="-90"
                            android:centerColor="#ffb43c"
                            android:endColor="#ffb43c"
                            android:startColor="#ffb43c"
                            />
                        <corners
                            android:radius="14dp" />
                    </shape>
                </item>

            </layer-list>

        </clip>
    </item>
</layer-list>