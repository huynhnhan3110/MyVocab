<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relativeLayoutOnTu"
    android:layout_height="match_parent"
    tools:context=".ui.hoctuchuanbi.OnTuChuanbiFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/horizontalProgress"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/exitinstant"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbackgroundbutton"
            android:src="@drawable/ic_baseline_clear_24"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            />
        <ProgressBar
            android:id="@+id/progressBarontu"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="90"
            android:layout_weight="1"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/pb_drawable_2"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="24dp"
            /><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60%"
        android:textColor="#ffb33b"
        android:id="@+id/progressText"
        android:layout_marginRight="3dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã thuộc"
        android:background="@drawable/tieptucbackground"


        android:layout_marginRight="23dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonnext"/>

    <Button
        android:id="@+id/buttonprevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="23dp"
        android:visibility="gone"
        android:layout_marginBottom="15dp"
        android:text="Chưa thuộc" />
    <TextView
        android:id="@+id/card_front"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:textColor="#fff"
        android:background="@drawable/split_background"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textSize="32sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text=""
        />

    <TextView
        android:id="@+id/card_back"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:textColor="#fff"
        android:alpha="0"
        android:gravity="center"
        android:padding="18dp"
        android:background="@drawable/gradient"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="Cảm xúc \n &quot;Làm cái app này có rất nhiều cảm xúc&quot;"
        />
</RelativeLayout>